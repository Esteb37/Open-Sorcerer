<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.create.CreateProjectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRepo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:hint="GitHub Repo link"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toStartOf="@+id/btnQuick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnQuick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="Quick Setup"
                app:layout_constraintBottom_toBottomOf="@+id/etRepo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etRepo" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Project Title"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/btnQuick"
                app:layout_constraintStart_toStartOf="@+id/etRepo"
                app:layout_constraintTop_toBottomOf="@+id/etRepo" />

            <EditText
                android:id="@+id/etShortDescription"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Briefly describe your project."
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="@+id/etTitle"
                app:layout_constraintStart_toStartOf="@+id/etTitle"
                app:layout_constraintTop_toBottomOf="@+id/etTitle" />

            <EditText
                android:id="@+id/etLanguages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Select the languages used"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="@+id/etShortDescription"
                app:layout_constraintStart_toStartOf="@+id/etShortDescription"
                app:layout_constraintTop_toBottomOf="@+id/etShortDescription" />

            <EditText
                android:id="@+id/etTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Add tags to your project"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="@+id/etLanguages"
                app:layout_constraintStart_toStartOf="@+id/etLanguages"
                app:layout_constraintTop_toBottomOf="@+id/etLanguages" />

            <EditText
                android:id="@+id/etReadme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Project README"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/etTags"
                app:layout_constraintStart_toStartOf="@+id/etTags"
                app:layout_constraintTop_toBottomOf="@+id/etTags" />

            <EditText
                android:id="@+id/etImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="Link to logo"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
                app:layout_constraintEnd_toStartOf="@+id/ivLogo"
                app:layout_constraintStart_toStartOf="@+id/etTags"
                app:layout_constraintTop_toBottomOf="@+id/etReadme" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="Create"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/etReadme"
                app:layout_constraintStart_toStartOf="@+id/etReadme"
                app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/etReadme"
                app:layout_constraintTop_toBottomOf="@+id/etReadme"
                app:srcCompat="@drawable/placeholder2"
                tools:src="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>